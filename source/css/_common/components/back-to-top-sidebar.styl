.back-to-top {
  background: $z-head-bg;
  font-size: $b2t-font-size;
  margin: 20px - $sidebar-offset -10px -20px;
  opacity: 0;
  text-align: center;
  border-radius: 50%;
  the-transition();

  if (!hexo-config('back2top.scrollpercent')) {
    span {
      display: none;
    }
  }

  &.back-to-top-on {
    cursor: pointer;
    opacity: $b2t-opacity;

    &:hover {
      opacity: $b2t-opacity-hover;
    }
  }
}

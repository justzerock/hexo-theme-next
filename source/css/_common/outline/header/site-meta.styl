.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() {
    text-align: center;
  }
}

.brand {
  background: none;
  border-bottom: none;
  color: $z-sidebar-font;
  display: inline-block;
  line-height: $font-size-title;
  padding: 0 40px;
  position: relative;

  &:hover {
    color: $z-sidebar-font-hover;
  }
  &::before {
    display: none;
  }
}

.site-title {
  display: inline-block;
  font-family: $z-font-min;
  /*font-family: $font-family-logo;*/
  font-size: $font-size-title;
  font-weight: normal;
  line-height: 1.5;
  vertical-align: top;
  text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.7);
  letter-spacing: .2em;
}

.site-subtitle {
  font-family: $z-font-min;
  color: $z-body-font-light;
  font-size: $font-size-subtitle;
  margin-top: 10px;
}

.use-motion {
  .brand {
    opacity: 0;
  }

  .site-title, .site-subtitle, .custom-logo-image {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}

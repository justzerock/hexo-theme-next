// Menu
// --------------------------------------------------
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
  +mobile() {
    text-align: center !important;
  }
}

.menu-item {
  display: inline-block;
  list-style: none;
  //margin: 0 10px;

  +mobile() {
    display: block;
    margin-top: 10px;

    &.menu-item-search {
      display: none;
    }
  }

  a, span.exturl {
    width: 50px;
    height 50px;
    color: $z-a;
    border-radius: 5px;
    border-bottom: 0;
    display: block;
    font-size: $font-size-smaller;
    transition-property: border-color;
    the-transition();

    +mobile() {
      width: auto;
      height auto;
      display: inline-block;
    }

    // To prevent hover on external links with touch devices after click.
    @media (hover: none) {
      &:hover {
        background: $z-a-bg;
        //border-bottom-color: transparent !important;
      }
    }
  }

  .fa, .fab, .far, .fas {
    margin-right: 8px;
  }

  .badge {
    display: inline-block;
    font-weight: bold;
    line-height: 1;
    margin-left: .35em;
    margin-top: .35em;
    text-align: center;
    white-space: nowrap;

    +mobile() {
      float: right;
      margin-left: 0;
    }
  }
}

.menu-item-active a {
  background: var(--menu-item-bg-color);
}

.use-motion .menu-item {
  opacity: 0;
}

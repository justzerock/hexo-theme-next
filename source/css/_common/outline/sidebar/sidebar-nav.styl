// Sidebar Navigation
.sidebar-nav {
  margin: 0;
  padding-bottom: 20px;
  padding-left: 0;

  li {
    border-bottom: 1px solid transparent;
    color: $z-sidebar-font;
    cursor: pointer;
    display: inline-block;
    font-size: $font-size-small;

    &.sidebar-nav-overview {
      margin-left: 10px;
    }

    &:hover {
      color: $z-sidebar-font-hover;
    }
  }

  .sidebar-nav-active {
    border-bottom-color: $z-sidebar-font-hover;
    color: $z-sidebar-font-hover;

    &:hover {
      color: $z-sidebar-font-hover;
    }
  }
}

.sidebar-panel {
  display: none;
}

.sidebar-panel-active {
  display: block;
}

// Post Expand
// --------------------------------------------------
.posts-expand .home {
  padding: 10px;
  transition all .3s;
  &:hover {
    border-radius: 10px
    box-shadow: 0px 0px 4px rgba(0, 0, 0, .3)
  } 
  .post-title, .post-meta {
    text-align: $site-meta-text-align;

    +mobile() {
      text-align: center;
    }
  }

  .post-meta {
    margin: 5px 0 20px 0;
  }
}

.posts-expand {
  padding-top: 0;

  .post-eof {
    display: none;
  }

  .post-block:not(:first-child) {
    margin-top: 120px;
  }

  .post-title, .post-meta {
    text-align: center;
  }

  .post-title-link::before {
    background: $z-post-title;
  }

  .post-body img {
    margin-left: 0;
  }

  .post-tags {
    text-align: left;

    a {
      background: $whitesmoke;
      border-bottom: none;
      padding: 1px 5px;
      transition: all .3s;
      border-radius: 10px;

      &:hover {
        background: $z-a;
        /* background: $grey-light; */
        color: #fff
      }
      &::before {
        display: none;
      }
    }
  }

  .post-nav {
    margin-top: 40px;
  }
}

.post-button {
  margin-top: 20px;
  text-align: left;

  .btn {
    // color: $grey-dim;
    background: none;
    border: 0;
    border-radius: 10px;
    color: $z-a;
    // border-bottom: 2px solid $z-a;
    font-size: $font-size-small;
    padding: 0 1em;
    transition: all .3s;
    box-shadow: 0px 0px 2px rgba(0, 0, 0, .2);

    &:hover {
      background: $z-a;
      // border-bottom-color: $z-a-hover;
      color: #fff;
      box-shadow: 0px 0px 8px rgba(0, 0, 0, .2);
    }
    &::before {
      display: none;
    }
  }
}
